{
  "name": "ruby-eval",
  "displayName": "Ruby Eval",
  "description": "Ruby in vs code for web",
  "version": "0.1.0",
  "publisher": "DmitryBarskov",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/DmitryBarskov/ruby_eval"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ruby-eval.runRuby",
        "title": "Annotate (run, evaluate) Ruby script"
      },
      {
        "command": "ruby-eval.clearDecorations",
        "title": "Clear Ruby script annotations (decorations)"
      },
      {
        "command": "ruby-eval.resetVm",
        "title": "Reset Ruby VM (delete all variables, methods, classes, etc.)"
      }
    ],
    "configuration": {
      "title": "Ruby Eval",
      "type": "object",
      "properties": {
        "ruby-eval.rubyVersion": {
          "type": "string",
          "default": "3.4",
          "description": "Ruby version to use. Can be 3.2, 3.3 or 3.4. Run \"Reset Ruby VM\" command to apply changes."
        }
      }
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "yarn run compile-web",
    "vscode:prepublish": "yarn run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/assert": "^1.5.11",
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.99.0",
    "@types/webpack-env": "^1.18.8",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-web": "^0.0.68",
    "assert": "^2.1.0",
    "eslint": "^9.23.0",
    "mocha": "^11.1.0",
    "process": "^0.11.10",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@bjorn3/browser_wasi_shim": "^0.4.1",
    "@ruby/prism": "^1.4.0",
    "@ruby/wasm-wasi": "^2.7.1"
  }
}
